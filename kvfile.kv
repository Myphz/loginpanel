WindowManager:
    LoginWindow:
    RegisterWindow:

<ColoredLabel@Label>
    font_size: 30
    font_name: "Mogra.ttf"
    size_hint: .3, .15
    canvas.before:
        Color:
            rgba: (1,.4,0,1)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0,0,0,1)
        Line:
            width: 1.5
            rectangle: self.x, self.y, self.width, self.height

<TextInput>
    canvas.before:
        Color:
            rgba: 0,0,0,1
        Line:
            width: 1.5
            rectangle: self.x, self.y, self.width, self.height

<Button>
    font_name: "CuteFont.ttf"
    font_size: 40
    size_hint: .6, .2
    background_color: (.157, .455, .753, 1)
    background_normal: ""
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<TextInput>
    size_hint: .5, .15
    font_size: 25
    padding: [20, (self.height-self.line_height)/2]
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]


<LoginWindow>:
    name: "login"

    loginemail: loginemail
    loginpassword: loginpassword

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.jpg"

    ColoredLabel:
        text: "EMAIL"
        pos_hint: {"top": .9, "x": .1}

    TextInput:
        id: loginemail
        hint_text: "email"
        multiline: False
        pos_hint: {"x": .4, "top": .9}

    ColoredLabel:
        text: "PASSWORD"
        pos_hint: {"x": .1, "top": .7}

    TextInput:
        id: loginpassword
        hint_text: "password"
        multiline: False
        pos_hint: {"x": .4, "top": .7}

    Button:
        font_size: 80
        size_hint: .6, .2
        text: "LOGIN"
        pos_hint: {"x": .2, "top": .3}
        on_release:
            root.submitLogin()

    Button:
        background_color: (1,.4,0,1)
        font_size: 40
        size_hint: .3, .1
        text: "REGISTER"
        pos_hint: {"x": .35, "top": .45}
        on_release:
            root.clearData()
            app.root.current = "register"
            root.manager.transition.direction = "left"

    Label:
        font_name: "Actor.ttf"
        font_size: 20
        color: (0,0,0,1)
        size_hint: .4, .1
        text: "Don't have an account?"
        pos_hint: {"x": .3, "top": .55}
        background_color: 0,0,0,0




<RegisterWindow>:
    name: "register"

    registerusername: registerusername
    registeremail: registeremail
    registerpassword: registerpassword

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "bg.jpg"

    ColoredLabel:
        text: "USERNAME"
        pos_hint: {"top": .9, "x": .1}

    TextInput:
        id: registerusername
        hint_text: "username"
        multiline: False
        pos_hint: {"x": .4, "top": .9}

    ColoredLabel:
        text: "EMAIL"
        pos_hint: {"x": .1, "top": .7}

    TextInput:
        id: registeremail
        hint_text: "email"
        multiline: False
        pos_hint: {"x": .4, "top": .7}

    ColoredLabel:
        text: "PASSWORD"
        pos_hint: {"x": .1, "top": .5}

    TextInput:
        id: registerpassword
        hint_text: "password"
        multiline: False
        pos_hint: {"x": .4, "top": .5}

    Button:
        background_color: (1,.4,0,1)
        font_size: 40
        size_hint: .3, .1
        text: "BACK"
        pos_hint: {"x": .35, "top": .3}
        on_release:
            root.clearData()
            app.root.current = "login"
            root.manager.transition.direction = "right"

    Button:
        font_size: 80
        size_hint: .4, .15
        text: "REGISTER"
        pos_hint: {"x": .3, "top": .175}
        on_release:
            root.submitRegister()

